  updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

-- ุฌุฏูู ุฅุนูุงูุงุช ุญูููุงุช ุงููุงุณููู
CREATE TABLE IF NOT EXISTS yasmin_ads (
